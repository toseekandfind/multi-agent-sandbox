#!/usr/bin/env bash
#
# verify - Run dbt CI checks locally
#
# This script runs the same checks that CI runs:
# 1. dbt compile (validates all models compile)
# 2. dbt build --select <changed_models> (scoped build + tests)
#
# Usage:
#   ./scripts/verify              # Use default target
#   DBT_TARGET=ci ./scripts/verify # Use CI target
#
# Environment variables:
#   DBT_TARGET - dbt target to use (default: dev)
#   DBT_PROJECT_DIR - dbt project directory (default: .)
#   SKIP_COMPILE - set to "true" to skip compile step
#   VERBOSE - set to "true" for verbose output
#

set -euo pipefail

# Configuration
DBT_TARGET="${DBT_TARGET:-dev}"
DBT_PROJECT_DIR="${DBT_PROJECT_DIR:-.}"
SKIP_COMPILE="${SKIP_COMPILE:-false}"
VERBOSE="${VERBOSE:-false}"
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if dbt is installed
check_dbt() {
    if ! command -v dbt &> /dev/null; then
        log_error "dbt is not installed or not in PATH"
        exit 1
    fi
    log_info "Using dbt version: $(dbt --version | head -1)"
}

# Check if we're in a dbt project
check_dbt_project() {
    if [[ ! -f "${DBT_PROJECT_DIR}/dbt_project.yml" ]]; then
        log_warn "No dbt_project.yml found in ${DBT_PROJECT_DIR}"
        log_warn "This script is designed for dbt projects."
        log_warn "Skipping dbt checks..."
        exit 0
    fi
}

# Get the dbt selector for changed models
get_selector() {
    local selector=""

    if [[ -f "${SCRIPT_DIR}/dbt_changed_selector.py" ]]; then
        if [[ "$VERBOSE" == "true" ]]; then
            selector=$(python3 "${SCRIPT_DIR}/dbt_changed_selector.py" --smoke-fallback --verbose 2>&1 | tail -1)
        else
            selector=$(python3 "${SCRIPT_DIR}/dbt_changed_selector.py" --smoke-fallback 2>/dev/null)
        fi
    else
        log_warn "dbt_changed_selector.py not found, using smoke test fallback"
        selector="+tag:ci_smoke+"
    fi

    echo "$selector"
}

# Run dbt compile
run_compile() {
    if [[ "$SKIP_COMPILE" == "true" ]]; then
        log_info "Skipping compile step (SKIP_COMPILE=true)"
        return 0
    fi

    log_info "Running dbt compile --target ${DBT_TARGET}"

    if dbt compile --target "${DBT_TARGET}" --project-dir "${DBT_PROJECT_DIR}"; then
        log_success "dbt compile passed"
        return 0
    else
        log_error "dbt compile failed"
        return 1
    fi
}

# Run dbt build with selector
run_build() {
    local selector="$1"

    if [[ -z "$selector" ]]; then
        log_warn "No selector provided, skipping build"
        return 0
    fi

    log_info "Running dbt build --select \"${selector}\" --target ${DBT_TARGET}"

    if dbt build --select "${selector}" --target "${DBT_TARGET}" --project-dir "${DBT_PROJECT_DIR}"; then
        log_success "dbt build passed"
        return 0
    else
        log_error "dbt build failed"
        return 1
    fi
}

# Main execution
main() {
    log_info "=== dbt CI Verification ==="
    log_info "Target: ${DBT_TARGET}"
    log_info "Project dir: ${DBT_PROJECT_DIR}"
    echo ""

    # Checks
    check_dbt
    check_dbt_project

    # Get selector
    log_info "Computing changed model selector..."
    selector=$(get_selector)

    if [[ -z "$selector" ]]; then
        log_warn "No dbt-related changes detected"
        log_info "Nothing to build. CI would pass."
        exit 0
    fi

    log_info "Selector: ${selector}"
    echo ""

    # Run compile
    log_info "=== Step 1: Compile ==="
    if ! run_compile; then
        exit 1
    fi
    echo ""

    # Run build
    log_info "=== Step 2: Build + Test ==="
    if ! run_build "$selector"; then
        exit 1
    fi
    echo ""

    log_success "=== All checks passed ==="
}

main "$@"
